@import 'normalize.styl/normalize'
@import url('http://fonts.googleapis.com/css?family=Cutive');

#game-container
    background-color: lighten(yellow, 50%)
    height: 100%
    max-height: 100%
    max-width: 100%
    position: absolute
    width: 100%
    
.curtain
    height: 100%
    left: 0
    max-height: 100%
    max-width: 100%
    position: absolute
    top: 0
    width: 100%
    
#splash-curtain
    .game-title
        background: white
        box-shadow: 0 2px 4px darken(yellow, 10%)
        color: cyan
        font-weight: bold
        text-align: center
        margin: 20% auto 0 auto
        padding: 0.25em 1.5em
        text-shadow:
            -1px -1px 1px rgb(180, 180, 190),
            1px 1px 2px white
        width: 400px
    
        h1
            font-family: 'Cutive', serif
            font-size: 3em    

        button.start
            background: cyan
            border: 3px solid white
            border-radius: 0.5em
            color: white
            margin: 0 0 2em 0
            padding: 0.5em
            text-transform: uppercase

    .game-about
        color: rgb(180, 180, 180)
        font-size: 0.8em
        margin: 2em auto
        text-align: center
        width: 400px
        
        p
            margin: 0.5em 0
    
#snap-stage
    background: rgb(255, 255, 200)
    box-shadow: inset 0 0 4px white
    display: block
    height: 100%
    margin: 0 auto
    max-height: 100%
    max-width: 400px
    position: relative
    width: 100%    
    
    .conductor
        fill: gold
        stroke: navy
        stroke-width: 12px